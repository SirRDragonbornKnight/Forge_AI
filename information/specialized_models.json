{
  "enabled": true,
  "shared_tokenizer": "forge_ai/vocab_model/bpe_vocab.json",
  "models": {
    "router": {
      "path": "models/specialized/intent_router_nano.pth",
      "size": "nano",
      "description": "Classifies user intent (chat, vision, image, code, etc.)",
      "max_seq_len": 256
    },
    "vision": {
      "path": "models/specialized/vision_caption_tiny.pth",
      "size": "tiny",
      "description": "Generates descriptions from vision features",
      "max_seq_len": 512
    },
    "code": {
      "path": "models/specialized/code_gen_small.pth",
      "size": "small",
      "description": "Generates and explains code",
      "max_seq_len": 1024
    },
    "trainer": {
      "path": "models/specialized/trainer_small.pth",
      "size": "small",
      "description": "Generates training data and evaluates AI responses - trains other AIs",
      "max_seq_len": 2048,
      "capabilities": ["generate_qa", "evaluate_response", "improve_answer", "create_curriculum"]
    }
  }
}
