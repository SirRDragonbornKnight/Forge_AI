[flake8]
# Enigma Engine Linting Configuration
max-line-length = 100
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (we set max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with PEP 8)
    W503,
    # E402: module level import not at top of file (needed for conditional imports)
    E402
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    # Third-party
    models,
    data,
    memory
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401,F403
    # Allow more flexibility in test files
    tests/*.py:F401,F811
